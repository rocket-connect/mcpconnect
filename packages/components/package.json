{
  "name": "@mcpconnect/components",
  "version": "0.0.15",
  "description": "React components for building MCPConnect interfaces",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "react",
    "components",
    "ui"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@mcpconnect/schemas": "workspace:*",
    "clsx": "^2.0.0",
    "lucide-react": "^0.302.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.50.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rocket-connect/mcpconnect.git",
    "directory": "packages/components"
  },
  "bugs": {
    "url": "https://github.com/rocket-connect/mcpconnect/issues"
  },
  "homepage": "https://github.com/rocket-connect/mcpconnect#readme",
  "author": {
    "name": "rconnect.tech",
    "url": "https://rconnect.tech"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
