{
  "name": "mcpconnect",
  "version": "0.0.0",
  "description": "CLI tool for MCPConnect - quickly start a server with UI for debugging MCP integrations",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "debugging",
    "development"
  ],
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcpconnect": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "dev": "tsx watch src/cli.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "postinstall": "node -e \"console.log('\\nðŸ“¦ MCPConnect installed successfully!\\nðŸš€ Run: npx mcpconnect\\n')\""
  },
  "dependencies": {
    "@mcpconnect/server": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "open": "^10.0.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rocket-connect/mcpconnect.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/rocket-connect/mcpconnect/issues"
  },
  "homepage": "https://github.com/rocket-connect/mcpconnect#readme",
  "author": {
    "name": "rconnect.tech",
    "url": "https://rconnect.tech"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
