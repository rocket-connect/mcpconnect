{
  "name": "@mcpconnect/schemas",
  "version": "0.0.18",
  "description": "Zod schemas and TypeScript types for MCPConnect - ensuring type safety across the ecosystem",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "schemas",
    "zod",
    "typescript",
    "validation"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "clean": "rm -rf dist && rm tsconfig.tsbuildinfo",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "rollup": "^4.50.1",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rocket-connect/mcpconnect.git",
    "directory": "packages/schemas"
  },
  "bugs": {
    "url": "https://github.com/rocket-connect/mcpconnect/issues"
  },
  "homepage": "https://github.com/rocket-connect/mcpconnect#readme",
  "author": {
    "name": "rconnect.tech",
    "url": "https://rconnect.tech"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
